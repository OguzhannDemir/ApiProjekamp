@model List<ResultProductDto>

@{
    ViewData["Title"] = "ProductList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;  

}


<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12 col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Ürün Yönetim Paneli</h4>
                    </div>
                    <div class="card-body">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Ad</th>
                                    <th scope="col">Açıklama</th>
                                    <th scope="col">Fiyat</th>
                                    <th scope="col">Kategori</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tr>
                                        <th scope="row">@count</th>
                                        <td>@item.ProductName</td>
                                        <td>@item.ProductDescription</td>
                                        <td>@item.Price ₺</td>
                                        <td>@item.CategoryName</td>
                                        <td><a href="/Product/ProductDelete/@item.ProductId/" class="btn btn-danger">Sil</a></td>
                                        <td><a href="/Product/ProductUpdate/@item.ProductId/" class="btn btn-warning">Güncelle</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                        <td><a href="/Product/ProductCreate/" class="btn btn-secondary">Yeni Ürün Ekle</a></td>

                    </div>
                </div>


            </div>

        </div>
    </div>
</section>




