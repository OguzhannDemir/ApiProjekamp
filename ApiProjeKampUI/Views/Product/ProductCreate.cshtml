@model ProductCreateDto

@{
    ViewData["Title"] = "ProductCreate";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12 col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Ürün Ekleme Sayfası</h4>
                    </div>
                    <div class="card-body">

                        <form method="post">
                            <label>Ürün Adı</label>
                            <input type="text" asp-for="ProductName" class="form-control" />
                            <br />
                            <label>Ürün Açıklaması</label>
                            <textarea asp-for="ProductDescription" class="form-control" rows="4"></textarea>
                            <br />
                            <label>Ürün Fiyatı</label>
                            <input type="text" asp-for="Price" class="form-control" />
                            <br />
                            <label>Ürün Görsel</label>
                            <input type="text" asp-for="ImageUrl" class="form-control" />
                            <br />
                            <label>Ürün Kategorisi</label>
                            <select asp-for="CategoryId" asp-items="ViewBag.CategoryName" class="form-control">
                                <option value="">Kategori Seçiniz</option>
                            </select>
                            <br />
                            <button class="btn btn-primary">Ürünü Ekle</button>
                        </form>
                    </div>
                </div>


            </div>

        </div>
    </div>
</section>

