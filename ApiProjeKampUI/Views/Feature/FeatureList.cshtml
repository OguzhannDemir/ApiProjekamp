@model List<ResultFeatureDto>

@{
    ViewData["Title"] = "FeatureList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12 col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Öne Çıkan Alan İşlemleri</h4>
                    </div>
                    <div class="card-body">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Başlık</th>
                                    <th scope="col">Alt Başık</th>
                                    <th scope="col">Açıklama</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tr>
                                        <th scope="row">@count</th>
                                        <td>@item.Title</td>
                                        <td>@item.SubTitle</td>
                                        <td>@item.Description</td>

                                        <td><a href="/Feature/FeatureDelete/@item.FeatureId/" class="btn btn-danger">Sil</a></td>
                                        <td><a href="/Feature/FeatureUpdate/@item.FeatureId/" class="btn btn-warning">Güncelle</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                        <td>
                            @if (Model.Count == 1)
                            {
                                <a href="#" class="btn btn-secondary" onclick="return false"> Feature Mevcut</a>
                            }
                            else
                            {

                                <a href="/Feature/FeatureCreate/" class="btn btn-secondary">Yeni Feature Girişi</a>

                            }
                     
                        </td>

                    </div>
                </div>


            </div>

        </div>
    </div>
</section>

